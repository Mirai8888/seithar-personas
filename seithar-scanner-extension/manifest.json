{
  "manifest_version": 3,
  "name": "Seithar Cognitive Threat Scanner",
  "version": "1.0.0",
  "description": "Detect cognitive threat patterns (SCT-001 through SCT-012) in web content.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
