{
  "manifest_version": 2,
  "name": "Seithar Cognitive Threat Scanner",
  "version": "1.0.0",
  "description": "Detect cognitive threat patterns (SCT-001 through SCT-012) in web content.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "scanner@seithar.com",
      "strict_min_version": "109.0"
    }
  }
}